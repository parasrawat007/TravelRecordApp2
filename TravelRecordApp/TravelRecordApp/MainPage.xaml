<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecordApp.MainPage">

    <StackLayout  Margin="15" VerticalOptions="Center">
        <Entry x:Name="EntryEmail" Margin="10" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="EntryPassword" Margin="10" Placeholder="Password" IsPassword="True"/>
        <Button x:Name="BtnLogin" Text="Login" BackgroundColor="#3f84E3" TextColor="White" Clicked="BtnLogin_Clicked"/>
    </StackLayout>

</ContentPage>
